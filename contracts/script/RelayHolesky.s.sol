pragma solidity ^0.8.26;

import {Script} from "forge-std/Script.sol";
import {stdJson} from "forge-std/StdJson.sol";
import {SP1Blobstream} from "../src/SP1Blobstream.sol";
import {console2} from "forge-std/console2.sol";

contract RelayHoleskyScript is Script {
    using stdJson for string;

    function setUp() public {}

    function run() external {
        vm.startBroadcast();

        SP1Blobstream blobstream = SP1Blobstream(0x315A044cb95e4d44bBf6253585FbEbcdB6fb41ef);

        blobstream.setRelayerApproval(0xBaB2c2aF5b91695e65955DA60d63aD1b2aE81126, true);

        uint64 latestBlock = blobstream.latestBlock();
        bytes32 latestHeader = blobstream.blockHeightToHeaderHash(latestBlock);
        console2.log(latestBlock);
        console2.logBytes32(latestHeader);

        bytes memory proof =
            hex"";
        bytes memory publicValues =
            hex"";

        blobstream.commitHeaderRange(proof, publicValues);

        vm.stopBroadcast();
    }
}
